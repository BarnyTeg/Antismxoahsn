local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Настройки
local TARGET_ID = "1_14101" -- ID оригинала (Gold Bar)
local SPAWN_DISTANCE = 3 -- Дистанция перед игроком (метры)

-- Функция поиска объекта по ID
local function findObjectById(id)
    for _, obj in ipairs(workspace:GetDescendants()) do
        if tostring(obj:GetDebugId()) == id then
            return obj
        end
    end
end

-- Главная функция
local function createCloneWithNewId()
    -- 1. Находим оригинал
    local original = findObjectById(TARGET_ID)
    
    if not original then
        print("❌ Оригинальный объект не найден!")
        return
    end

    -- 2. Создаем копию
    local clone = original:Clone()
    
    -- 3. Генерируем новый "ID" (на самом деле новый DebugId)
    clone.Parent = workspace -- Важно: сначала помещаем в игру
    local newId = clone:GetDebugId() -- Автоматически генерируется новый
    
    -- 4. Настраиваем копию
    clone.Name = "Cloned_"..original.Name -- Меняем имя
    
    -- 5. Размещаем перед игроком
    if player.Character then
        local humanoidRootPart = player.Character:WaitForChild("HumanoidRootPart")
        clone.Position = humanoidRootPart.Position + (humanoidRootPart.CFrame.LookVector * SPAWN_DISTANCE)
        clone.Anchored = true -- Чтобы не упал
    end

    -- 6. Выводим информацию
    print("✅ Создана копия:")
    print("Оригинал:", original:GetFullName(), "| ID:", TARGET_ID)
    print("Клон:", clone:GetFullName(), "| Новый ID:", newId)
    
    return clone
end

-- Запуск
createCloneWithNewId()
