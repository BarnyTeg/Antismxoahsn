local Players = game:GetService("Players")
local player = Players.LocalPlayer
local bandage = workspace:WaitForChild("RuntimeItems"):WaitForChild("Bandage")

-- 1. –ù–∞—Ö–æ–¥–∏–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–µ –∫–Ω–æ–ø–∫–∏
local originalTakeButton = player.PlayerGui:FindFirstChild("TakeButton", true)
local originalUseButton = player.PlayerGui:FindFirstChild("UseButton", true)

-- 2. –§—É–Ω–∫—Ü–∏—è –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è –∫–Ω–æ–ø–∫–∏
local function copyButton(original)
    if not original then return nil end
    
    local copy = original:Clone()
    copy.Name = original.Name .. "_Copy"
    copy.Visible = true
    return copy
end

-- 3. –°–æ–∑–¥–∞–µ–º –∫–æ–ø–∏–∏ –∫–Ω–æ–ø–æ–∫
local takeBtn = copyButton(originalTakeButton)
local useBtn = copyButton(originalUseButton)

-- 4. –†–∞–∑–º–µ—â–∞–µ–º –∫–æ–ø–∏–∏ –≤ GUI
if takeBtn and useBtn then
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "CopiedButtonsUI"
    screenGui.Parent = player.PlayerGui
    
    -- –ü–æ–∑–∏—Ü–∏–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ –∫–Ω–æ–ø–∫–∏ "–í–∑—è—Ç—å"
    takeBtn.Position = UDim2.new(0.5, -100, 0.7, 0)
    takeBtn.Parent = screenGui
    
    -- –ü–æ–∑–∏—Ü–∏–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ –∫–Ω–æ–ø–∫–∏ "–ü–æ–¥–Ω—è—Ç—å"
    useBtn.Position = UDim2.new(0.5, -100, 0.8, 0)
    useBtn.Parent = screenGui
    
    -- –õ–æ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ
    print("‚úÖ –ö–Ω–æ–ø–∫–∏ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω—ã –∏ —Ä–∞–∑–º–µ—â–µ–Ω—ã!")
else
    warn("‚ö†Ô∏è –ù–µ —É–¥–∞–ª–æ—Å—å –Ω–∞–π—Ç–∏ –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–µ –∫–Ω–æ–ø–∫–∏")
end

-- 5. –î–µ–±–∞–≥-–∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è (–∫–æ–ø–∏—Ä—É–µ–º –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞)
local debugInfo = ""
if originalTakeButton then
    debugInfo = debugInfo .. "–ö–Ω–æ–ø–∫–∞ '–í–∑—è—Ç—å' –Ω–∞–π–¥–µ–Ω–∞: "..originalTakeButton:GetFullName().."\n"
end
if originalUseButton then
    debugInfo = debugInfo .. "–ö–Ω–æ–ø–∫–∞ '–ü–æ–¥–Ω—è—Ç—å' –Ω–∞–π–¥–µ–Ω–∞: "..originalUseButton:GetFullName().."\n"
end

setclipboard(debugInfo)
print("üìã –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –∫–Ω–æ–ø–∫–∞—Ö —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞ –≤ –±—É—Ñ–µ—Ä")
