local Players = game:GetService("Players")
local Clipboard = game:GetService("Clipboard")
local TweenService = game:GetService("TweenService")

-- Создание скрытого интерфейса
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "GhostUI_"..tostring(math.random(1000,9999))
ScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.BackgroundTransparency = 0.95
Frame.Size = UDim2.new(0.2, 0, 0.4, 0)
-- ... остальные стили ...

local function safeClone(obj)
    local success, clone = pcall(function()
        return obj:Clone()
    end)
    return success and clone or nil
end

local function getStealthInfo(obj)
    local meta = debug.getregistry(obj)
    return string.format("MemoryID: 0x%X\nPath: %s", meta.__id, obj:GetFullName())
end

task.spawn(function()
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and not obj:FindFirstChild("AntiCheatMarker") then
            local Button = safeClone(TemplateButton)
            if Button then
                Button.Text = "["..obj.ClassName.."] "..obj.Name
                Button.MouseButton1Click:Connect(function()
                    Clipboard:Set(getStealthInfo(obj))
                end)
                Button.Parent = ScrollingFrame
            end
        end
    end
end)

CopyButton.MouseButton1Click:Connect(function()
    TweenService:Create(Frame, TweenInfo.new(0.3), {Position = UDim2.new(-0.3,0,0.5,0)}):Play()
    task.wait(0.3)
    ScreenGui:Destroy()
end)
