local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Обработка команды "/gold" в чате
player.Chatted:Connect(function(message)
    if message:lower() == "/gold" then
        local character = player.Character
        if character and character:FindFirstChild("Head") then
            local head = character.Head
            local goldBar = game:GetService("ReplicatedStorage"):FindFirstChild("GoldBar") -- Ищем слиток
            if goldBar then
                local newGold = goldBar:Clone()
                newGold.Position = head.Position + Vector3.new(0, 5, 0) -- 5 - высота над головой
                newGold.Parent = workspace
                newGold.Anchored = false
            end
        end
    end
end)
