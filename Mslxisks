local bandage = workspace:WaitForChild("RuntimeItems"):WaitForChild("Bandage")
local HttpService = game:GetService("HttpService")
local textToCopy = ""

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –≤—ã–≤–æ–¥–∞
local function addToOutput(text)
    textToCopy = textToCopy .. text .. "\n"
end

-- –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è —Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
local function scanScripts(object)
    addToOutput("üîç –ê–Ω–∞–ª–∏–∑ –æ–±—ä–µ–∫—Ç–∞: " .. object:GetFullName())
    
    -- –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–∫—Ä–∏–ø—Ç–æ–≤
    for _, script in ipairs(object:GetChildren()) do
        if script:IsA("Script") or script:IsA("LocalScript") or script:IsA("ModuleScript") then
            addToOutput("\nüìú –°–∫—Ä–∏–ø—Ç: " .. script.Name)
            addToOutput("–¢–∏–ø: " .. script.ClassName)
            addToOutput("–ü—É—Ç—å: " .. script:GetFullName())
            
            pcall(function()
                addToOutput("–°–æ–¥–µ—Ä–∂–∏–º–æ–µ:\n" .. script.Source)
            end)
        end
    end
end

-- –°–∫–∞–Ω–∏—Ä—É–µ–º –±–∞–Ω–¥–∞–∂ –∏ –≤—Å–µ –µ–≥–æ —á–∞—Å—Ç–∏
scanScripts(bandage)
for _, child in ipairs(bandage:GetDescendants()) do
    scanScripts(child)
end

-- –î–æ–±–∞–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ–± –∞—Ç—Ä–∏–±—É—Ç–∞—Ö
addToOutput("\nüìå –ê—Ç—Ä–∏–±—É—Ç—ã:")
for attr, value in pairs(bandage:GetAttributes()) do
    addToOutput(attr .. " = " .. tostring(value))
end

-- –ö–æ–ø–∏—Ä—É–µ–º –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞
pcall(function()
    setclipboard(textToCopy)
    print("‚úÖ –í—Å–µ –¥–∞–Ω–Ω—ã–µ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω—ã –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞!")
end)

-- –°–æ–∑–¥–∞–µ–º –∫–Ω–æ–ø–∫—É –¥–ª—è –ø–æ–≤—Ç–æ—Ä–Ω–æ–≥–æ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0.6, 0, 0.1, 0)
button.Position = UDim2.new(0.2, 0, 0.5, 0)
button.Text = "–°–ö–û–ü–ò–†–û–í–ê–¢–¨ –î–ê–ù–ù–´–ï"
button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
button.TextColor3 = Color3.new(1, 1, 1)
button.Parent = screenGui

button.MouseButton1Click:Connect(function()
    pcall(function()
        setclipboard(textToCopy)
        button.Text = "–î–ê–ù–ù–´–ï –°–ö–û–ü–ò–†–û–í–ê–ù–´!"
        wait(1)
        button.Text = "–°–ö–û–ü–ò–†–û–í–ê–¢–¨ –î–ê–ù–ù–´–ï"
    end)
end)
