local RS = game:GetService("ReplicatedStorage")
local bandageDetected = false

-- Ловим появление Bandage
workspace.RuntimeItems.DescendantAdded:Connect(function(obj)
    if obj.Name == "Bandage" then
        print("[DETECT] Bandage появился в мире!")
        bandageDetected = true
    end
end)

-- Следим за всеми RemoteEvent
for _, remote in ipairs(RS:GetDescendants()) do
    if remote:IsA("RemoteEvent") then
        local original = remote.FireServer
        remote.FireServer = function(self, ...)
            local args = {...}
            print("[REMOTE] " .. self.Name .. " | Аргументы:", unpack(args))
            return original(self, unpack(args))
        end
    end
end

print("Скрипт шпионаж активен — жди появления Bandage и команд к нему.")
