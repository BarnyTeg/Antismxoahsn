local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

--// 1. –ê–ë–°–û–õ–Æ–¢–ù–û–ï –ë–ï–°–°–ú–ï–†–¢–ò–ï (–¥–∞–∂–µ –¥–ª—è –∫–∞—Å—Ç–æ–º–Ω—ã—Ö —Å–∏—Å—Ç–µ–º —É—Ä–æ–Ω–∞) //--
local function godMode(character)
    local humanoid = character:WaitForChild("Humanoid")
    
    -- –§–∏–∫—Å –¥–ª—è –ª—é–±—ã—Ö –¥–≤–∏–∂–∫–æ–≤
    humanoid.MaxHealth = math.huge
    humanoid.Health = math.huge
    
    -- –ü–æ–ª–Ω—ã–π –∏–º–º—É–Ω–∏—Ç–µ—Ç –∫ —Å–æ—Å—Ç–æ—è–Ω–∏—é "–º–µ—Ä—Ç–≤"
    humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, false)
    
    -- –ê—Ç–æ–º–∞—Ä–Ω–∞—è –∑–∞—â–∏—Ç–∞ –∑–¥–æ—Ä–æ–≤—å—è
    local healthLock = false
    humanoid:GetPropertyChangedSignal("Health"):Connect(function()
        if not healthLock then
            healthLock = true
            task.defer(function()
                humanoid.Health = math.huge
                healthLock = false
            end)
        end
    end)
    
    -- –ó–∞—â–∏—Ç–∞ –æ—Ç —É–¥–∞–ª–µ–Ω–∏—è –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
    character.Destroying:Connect(function()
        task.delay(0.3, function()
            player:LoadCharacter()
        end)
    end)
end

--// 2. KILL AURA (—É–±–∏–≤–∞–µ—Ç –≤—Å–µ—Ö NPC –≤–æ–∫—Ä—É–≥) //--
local function killAura()
    while task.wait(0.1) do -- –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–∞–∂–¥—ã–µ 0.1 —Å–µ–∫
        if not player.Character then continue end
        
        local root = player.Character:FindFirstChild("HumanoidRootPart")
        if not root then continue end
        
        -- –ò—â–µ–º –≤—Å–µ—Ö NPC –≤ —Ä–∞–¥–∏—É—Å–µ 15 –º–µ—Ç—Ä–æ–≤
        for _, npc in pairs(workspace:GetChildren()) do
            if npc:FindFirstChild("Humanoid") and not Players:GetPlayerFromCharacter(npc) then
                local npcRoot = npc:FindFirstChild("HumanoidRootPart")
                if npcRoot and (npcRoot.Position - root.Position).Magnitude < 15 then
                    npc.Humanoid.Health = 0 -- –ú–≥–Ω–æ–≤–µ–Ω–Ω–∞—è —Å–º–µ—Ä—Ç—å
                end
            end
        end
    end
end

--// 3. –ó–ê–©–ò–¢–ê –û–¢ –ë–ê–ì–û–í //--
local function safeInit()
    -- –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º GodMode
    player.CharacterAdded:Connect(godMode)
    if player.Character then
        godMode(player.Character)
    end
    
    -- –ó–∞–ø—É—Å–∫–∞–µ–º Kill Aura
    coroutine.wrap(killAura)()
    
    -- –≠–∫—Å—Ç—Ä–µ–Ω–Ω—ã–π —Ä–µ—Å–ø–∞–≤–Ω –ø—Ä–∏ –ª—é–±—ã—Ö –ø—Ä–æ–±–ª–µ–º–∞—Ö
    RunService.Heartbeat:Connect(function()
        if not player.Character or not player.Character:FindFirstChild("Humanoid") then
            player:LoadCharacter()
        end
    end)
end

-- –ó–∞–ø—É—Å–∫–∞–µ–º —Å–∏—Å—Ç–µ–º—É
safeInit()
print("üíÄ GOD MODE + KILL AURA –ê–ö–¢–ò–í–ò–†–û–í–ê–ù–´")
