local player = game:GetService("Players").LocalPlayer
local replicated = game:GetService("ReplicatedStorage")
local dropRemote = replicated.Remotes:FindFirstChild("DropItem")

-- Поиск лопаты в инвентаре
local function findShovel()
    local character = player.Character
    local backpack = player.Backpack
    -- Проверяем в руках
    if character then
        for _, v in pairs(character:GetChildren()) do
            if v:IsA("Tool") and v.Name == "Shovel" then
                return v
            end
        end
    end
    -- Проверяем в Backpack
    for _, v in pairs(backpack:GetChildren()) do
        if v:IsA("Tool") and v.Name == "Shovel" then
            return v
        end
    end
    return nil
end

-- Дюп
if dropRemote then
    local shovel = findShovel()
    if shovel then
        print("Нашёл Shovel, начинаю дюп!")
        for i = 1, 50 do
            dropRemote:FireServer(shovel) -- Спамим лопату
            wait(0.01) -- Быстрый тайминг
        end
        print("Заспамил Shovel, чекни землю — сколько лопат наклепал?")
    else
        print("Shovel не нашёл! Возьми лопату в инвентарь или в руки!")
    end
else
    print("DropItem не найден, пиздец!")
end

-- Бонус: выведем все предметы в инвентаре
print("Твой инвентарь:")
for _, v in pairs(player.Backpack:GetChildren()) do
    print(v.Name)
end
