local Players = game:GetService("Players")
local player = Players.LocalPlayer
local originalGold = game.Workspace.RuntimeItems.GoldBar.Prop_GoldBar

local function spawnWorkingGold()
    if not player.Character then return end
    local head = player.Character:FindFirstChild("Head")
    if not head then return end

    -- 1. Клонируем оригинал (со ВСЕМ содержимым)
    local goldCopy = originalGold:Clone()

    -- 2. Делаем его уникальным
    goldCopy.Name = "Gold_"..tostring(os.time())
    goldCopy.Position = head.Position + Vector3.new(0, 5, 0)
    goldCopy.Anchored = false
    goldCopy.Parent = workspace

    -- 3. Переносим ВСЕ скрипты оригинала
    for _, descendant in pairs(originalGold:GetDescendants()) do
        if descendant:IsA("Script") or descendant:IsA("LocalScript") then
            local scriptCopy = descendant:Clone()
            scriptCopy.Parent = goldCopy
            scriptCopy.Disabled = false
        end
    end

    -- 4. Добавляем физику (если нужно)
    local bodyForce = Instance.new("BodyForce")
    bodyForce.Force = Vector3.new(0, goldCopy:GetMass() * workspace.Gravity, 0)
    bodyForce.Parent = goldCopy
end

-- Спавн раз в 5 секунд
while true do
    spawnWorkingGold()
    task.wait(5)
end
