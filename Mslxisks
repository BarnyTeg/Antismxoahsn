local player = game.Players.LocalPlayer
local buttons = ""

for _, gui in ipairs(player.PlayerGui:GetDescendants()) do
    if gui:IsA("TextButton") then
        local name = gui.Name:lower()
        if name:find("bandage") or name:find("take") or name:find("use") then
            local text = tostring(gui.Text or "Нет текста")
            buttons = buttons .. "\n" .. gui:GetFullName() .. " | Текст: " .. text
        end
    end
end

print("Найденные кнопки:"..buttons)
pcall(function() setclipboard(buttons) end)
