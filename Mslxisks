local function logObject(instance)
    if instance then
        print("Имя: " .. instance.Name .. ", Путь: " .. instance:GetFullName() .. ", API: " .. instance.ClassName)
    end
end

local function logDescendants(parent)
    for _, child in ipairs(parent:GetChildren()) do
        logObject(child)
        logDescendants(child) -- Рекурсивный вызов для дочерних объектов
    end
end

-- Запуск логирования для workspace или другого объекта
logDescendants(workspace)
