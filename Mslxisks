local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local runtimeItems = workspace:WaitForChild("RuntimeItems")

-- Лог всех Remote'ов
for _, remote in ipairs(ReplicatedStorage:GetDescendants()) do
    if remote:IsA("RemoteEvent") then
        remote.OnClientEvent:Connect(function(...)
            print("[REMOTE] "..remote.Name.." | Аргументы:", ...)
        end)
    elseif remote:IsA("RemoteFunction") then
        remote.OnClientInvoke = function(...)
            print("[REMOTE FUNC] "..remote.Name.." | Аргументы:", ...)
        end
    end
end

-- Детектор появления предметов
runtimeItems.ChildAdded:Connect(function(child)
    print("[DETECT] Появился объект:", child.Name)

    -- Через 1 кадр выводим все активные Remote'ы (сработавшие в этот момент)
    RunService.Heartbeat:Wait()
    print("[!] Предмет появился. Проверь консоль выше на RemoteEvent.")
end)

print("Скрипт запущен: следим за появлением объектов и командами")
