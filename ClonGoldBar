local Players = game:GetService("Players")
local player = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- 1. Найти оригинальный бандаж
local function findBandage()
    -- Проверяем возможные места
    local locations = {
        ReplicatedStorage,
        workspace,
        game:GetService("StarterPack"),
        game:GetService("StarterGui")
    }
    
    for _, location in ipairs(locations) do
        local bandage = location:FindFirstChild("Bandage") or location:FindFirstChildWhichIsA("Tool")
        if bandage then
            return bandage
        end
    end
    return nil
end

-- 2. Создать копию и добавить в инвентарь
local function cloneBandageToInventory()
    local original = findBandage()
    if not original then
        warn("⚠️ Бандаж не найден!")
        return
    end
    
    local clone = original:Clone()
    clone.Name = "Bandage_Copy_" .. os.time() -- Уникальное имя
    
    -- Добавляем в инвентарь
    local backpack = player:WaitForChild("Backpack")
    clone.Parent = backpack
    
    print("✅ Бандаж скопирован в инвентарь!")
end

-- 3. Активация по нажатию кнопки на экране (для мобильных устройств)
local function setupTouchButton()
    local screenGui = Instance.new("ScreenGui")
    local button = Instance.new("TextButton")
    
    screenGui.Parent = player.PlayerGui
    button.Parent = screenGui
    
    -- Настройки кнопки
    button.Size = UDim2.new(0.2, 0, 0.1, 0)
    button.Position = UDim2.new(0.8, 0, 0.8, 0)
    button.Text = "Добавить бандаж"
    button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    
    -- Обработка нажатия
    button.MouseButton1Click:Connect(function()
        cloneBandageToInventory()
    end)
end

-- Запуск
setupTouchButton()
print("Готово! Нажмите кнопку на экране.")
