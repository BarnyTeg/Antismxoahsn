local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local ScrollingFrame = Instance.new("ScrollingFrame")
local TemplateButton = Instance.new("TextButton")
local CopyButton = Instance.new("TextButton")

ScreenGui.Parent = game:GetService("CoreGui")  -- Исправлено
Frame.Parent = ScreenGui
ScrollingFrame.Parent = Frame
CopyButton.Parent = Frame

-- Настройка размеров и стиля (пример)
Frame.Size = UDim2.new(0, 300, 0, 400)
ScrollingFrame.Size = UDim2.new(1, 0, 0.9, 0)
TemplateButton.Size = UDim2.new(1, 0, 0, 30)

local function getObjectInfo(obj)
    return string.format("Class: %s\nName: %s\nPath: %s", obj.ClassName, obj.Name, obj:GetFullName())
end

for _, obj in pairs(workspace:GetDescendants()) do
    local Button = TemplateButton:Clone()
    Button.Text = obj.Name
    Button.Parent = ScrollingFrame
    Button.MouseButton1Click:Connect(function()
        game:GetService("StarterGui"):SetClipboard(getObjectInfo(obj))  -- Исправлено
    end)
end

CopyButton.MouseButton1Click:Connect(function()
    game:GetService("StarterGui"):SetClipboard("Данные скопированы!")  -- Исправлено
end)
