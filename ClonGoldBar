local Players = game:GetService("Players")
local player = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

-- –°–æ–∑–¥–∞–µ–º –∫–Ω–æ–ø–∫—É
local button = Instance.new("TextButton")
button.Name = "SpawnGoldButton"
button.Text = "ü™ô –°–æ–∑–¥–∞—Ç—å –∑–æ–ª–æ—Ç–æ"
button.Size = UDim2.new(0, 200, 0, 50)
button.Position = UDim2.new(0.5, -100, 0.9, 0) -- –í–Ω–∏–∑—É —ç–∫—Ä–∞–Ω–∞
button.BackgroundColor3 = Color3.fromRGB(255, 215, 0) -- –ó–æ–ª–æ—Ç–æ–π —Ü–≤–µ—Ç
button.Parent = player:WaitForChild("PlayerGui")

-- –û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞–∂–∞—Ç–∏—è
button.Activated:Connect(function()
    local character = player.Character
    if character and character:FindFirstChild("Head") then
        local head = character.Head
        local goldBar = game:GetService("ReplicatedStorage"):FindFirstChild("GoldBar") -- –ò—â–µ–º —Å–ª–∏—Ç–æ–∫
        if goldBar then
            local newGold = goldBar:Clone()
            newGold.Position = head.Position + Vector3.new(0, 5, 0) -- 5 - –≤—ã—Å–æ—Ç–∞ –Ω–∞–¥ –≥–æ–ª–æ–≤–æ–π
            newGold.Parent = workspace
            newGold.Anchored = false
        end
    end
end)

-- –ü—Ä—è—á–µ–º –∫–Ω–æ–ø–∫—É, –µ—Å–ª–∏ —ç—Ç–æ –Ω–µ –º–æ–±–∏–ª—å–Ω–æ–µ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–æ
if not UserInputService.TouchEnabled then
    button.Visible = false
end
