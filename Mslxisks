workspace.RuntimeItems.ChildAdded:Connect(function(child)
	if child.Name == "Bandage" then
		task.wait(0.3) -- подождём пока появится
		local dragEvent = game.ReplicatedStorage.Shared.Remotes:FindFirstChild("RequestStartDrag")
		if dragEvent then
			dragEvent:FireServer(true, "Bandage", nil)
			print("[+] Бандаж найден и подобран!")
		end
	end
end)
