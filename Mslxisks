local radius = 15 -- Ñ€Ð°Ð´Ð¸ÑƒÑ ÑÐºÐ°Ð½Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ Ð² Ð¼ÐµÑ‚Ñ€Ð°Ñ…
local includeChildren = true -- Ð²ÐºÐ»ÑŽÑ‡Ð°Ñ‚ÑŒ Ð»Ð¸ Ð¸Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ð¸ÑŽ Ð¾ Ð´Ð¾Ñ‡ÐµÑ€Ð½Ð¸Ñ… Ð¾Ð±ÑŠÐµÐºÑ‚Ð°Ñ…

local function getPlayerPosition()
    local player = game:GetService("Players").LocalPlayer
    return player and player.Character and player.Character:FindFirstChild("HumanoidRootPart") 
        and player.Character.HumanoidRootPart.Position or Vector3.new(0, 0, 0)
end

local function safeGet(callback, default)
    local success, result = pcall(callback)
    return success and result or default
end

local function getExtendedInfo(obj)
    local info = {}
    
    -- Ð‘Ð°Ð·Ð¾Ð²Ñ‹Ðµ ÑÐ²Ð¾Ð¹ÑÑ‚Ð²Ð°
    table.insert(info, "ðŸ”¹ Class: "..obj.ClassName)
    table.insert(info, "ðŸ”¹ Name: "..obj.Name)
    table.insert(info, "ðŸ”¹ FullPath: "..obj:GetFullName())
    table.insert(info, "ðŸ”¹ RobloxID: "..tostring(safeGet(function() return obj:GetDebugId() end, "N/A")))
    
    -- Ð¤Ð¸Ð·Ð¸Ñ‡ÐµÑÐºÐ¸Ðµ ÑÐ²Ð¾Ð¹ÑÑ‚Ð²Ð°
    if obj:IsA("BasePart") then
        table.insert(info, "ðŸ“ Position: "..tostring(obj.Position))
        table.insert(info, "ðŸ“ Size: "..tostring(obj.Size))
        table.insert(info, "ðŸ§± Material: "..tostring(obj.Material))
        table.insert(info, "ðŸ”˜ Anchored: "..tostring(obj.Anchored))
        table.insert(info, "ðŸ’¥ CanCollide: "..tostring(obj.CanCollide))
        table.insert(info, "ðŸ‘ï¸ Transparency: "..tostring(obj.Transparency))
    end
    
    -- Ð”Ð»Ñ Ð¼Ð¾Ð´ÐµÐ»ÐµÐ¹
    if obj:IsA("Model") then
        table.insert(info, "ðŸ§© PrimaryPart: "..tostring(safeGet(function() return obj.PrimaryPart end, "None")))
        table.insert(info, "ðŸ§’ Children: "..#obj:GetChildren())
    end
    
    -- Ð’Ð¸Ð·ÑƒÐ°Ð»ÑŒÐ½Ñ‹Ðµ ÑÐ²Ð¾Ð¹ÑÑ‚Ð²Ð°
    if obj:IsA("GuiObject") then
        table.insert(info, "ðŸŽ¨ BackgroundColor: "..tostring(obj.BackgroundColor3))
    elseif obj:IsA("BasePart") and obj:FindFirstChildOfClass("Texture") then
        table.insert(info, "ðŸ–¼ï¸ Textures: "..#obj:GetChildrenOfClass("Texture"))
    end
    
    -- Ð¡Ð¿ÐµÑ†Ð¸Ñ„Ð¸Ñ‡Ð½Ñ‹Ðµ ÑÐ²Ð¾Ð¹ÑÑ‚Ð²Ð°
    if obj:IsA("Light") then
        table.insert(info, "ðŸ’¡ Brightness: "..tostring(obj.Brightness))
        table.insert(info, "ðŸŒˆ Color: "..tostring(obj.Color))
    end
    
    -- Ð Ð°ÑÑÑ‚Ð¾ÑÐ½Ð¸Ðµ Ð´Ð¾ Ð¸Ð³Ñ€Ð¾ÐºÐ°
    local rootPart = safeGet(function()
        return obj:IsA("BasePart") and obj or obj:FindFirstChildOfClass("BasePart") or obj.PrimaryPart
    end, nil)
    
    if rootPart then
        local dist = (rootPart.Position - getPlayerPosition()).Magnitude
        table.insert(info, "ðŸ“ Distance: "..string.format("%.1f", dist).."m")
    end
    
    -- Ð”Ð¾Ð¿Ð¾Ð»Ð½Ð¸Ñ‚ÐµÐ»ÑŒÐ½Ñ‹Ðµ Ð¼ÐµÑ‚Ð°Ð´Ð°Ð½Ð½Ñ‹Ðµ
    table.insert(info, "ðŸ•’ CreatedTime: "..tostring(safeGet(function() return obj:GetAttribute("CreatedTime") end, "N/A")))
    table.insert(info, "ðŸ·ï¸ Tags: "..tostring(safeGet(function() 
        if game:GetService("CollectionService"):HasTag(obj, "Any") then
            return table.concat(game:GetService("CollectionService"):GetTags(obj), ", ")
        end
        return "None"
    end, "None")))
    
    -- Ð”Ð¾Ñ‡ÐµÑ€Ð½Ð¸Ðµ Ð¾Ð±ÑŠÐµÐºÑ‚Ñ‹ (ÐµÑÐ»Ð¸ Ð²ÐºÐ»ÑŽÑ‡ÐµÐ½Ð¾)
    if includeChildren and #obj:GetChildren() > 0 then
        table.insert(info, "\nðŸ§’ Children ("..#obj:GetChildren().."):")
        for i, child in ipairs(obj:GetChildren()) do
            if i <= 5 then -- ÐžÐ³Ñ€Ð°Ð½Ð¸Ñ‡Ð¸Ð²Ð°ÐµÐ¼ ÐºÐ¾Ð»Ð¸Ñ‡ÐµÑÑ‚Ð²Ð¾ Ð²Ñ‹Ð²Ð¾Ð´Ð¸Ð¼Ñ‹Ñ… Ð´Ð¾Ñ‡ÐµÑ€Ð½Ð¸Ñ… ÑÐ»ÐµÐ¼ÐµÐ½Ñ‚Ð¾Ð²
                table.insert(info, string.format("  %d. %s (%s)", i, child.Name, child.ClassName))
            end
        end
        if #obj:GetChildren() > 5 then
            table.insert(info, string.format("  ... and %d more", #obj:GetChildren() - 5))
        end
    end
    
    return table.concat(info, "\n")
end

local function scanArea()
    local result = {"=== SCAN RESULTS ==="}
    local count = 0
    
    for _, obj in pairs(workspace:GetDescendants()) do
        local rootPart = safeGet(function()
            return obj:IsA("BasePart") and obj or obj:FindFirstChildOfClass("BasePart") or obj.PrimaryPart
        end, nil)
        
        if rootPart and (rootPart.Position - getPlayerPosition()).Magnitude <= radius then
            local info = safeGet(getExtendedInfo, obj, "ðŸš« Failed to get info for this object")
            table.insert(result, "\n"..info)
            count = count + 1
        end
    end
    
    table.insert(result, string.format("\n=== Found %d objects in %dm radius ===", count, radius))
    
    local output = table.concat(result, "\n")
    setclipboard(output)
    print(output)
    print("\n[SUCCESS] Data copied to clipboard!")
end

-- ÐŸÐµÑ€Ð²Ñ‹Ð¹ Ð·Ð°Ð¿ÑƒÑÐº
scanArea()

-- ÐÐ²Ñ‚Ð¾Ð¼Ð°Ñ‚Ð¸Ñ‡ÐµÑÐºÐ¾Ðµ Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ðµ (Ð¿Ð¾ Ð¶ÐµÐ»Ð°Ð½Ð¸ÑŽ)
while true do
    wait(30)
    scanArea()
end
