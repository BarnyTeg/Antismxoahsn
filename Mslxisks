local player = game:GetService("Players").LocalPlayer
local RunService = game:GetService("RunService")

-- 1. –ü–æ–ª–Ω–æ–µ –æ—Ç–∫–ª—é—á–µ–Ω–∏–µ —Å–µ—Ä–≤–µ—Ä–Ω–æ–≥–æ –∫–æ–Ω—Ç—Ä–æ–ª—è
local function hijackCharacter()
    if not player.Character then return end
    
    -- –°–æ–∑–¥–∞–µ–º –¥—É–±–ª–∏–∫–∞—Ç –¥–ª—è –ª–æ–∫–∞–ª—å–Ω–æ–≥–æ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
    local fakeChar = player.Character:Clone()
    fakeChar.Name = "Fake_"..player.Name
    fakeChar.Parent = workspace
    
    -- –ü–µ—Ä–µ–Ω–æ—Å–∏–º —É–ø—Ä–∞–≤–ª–µ–Ω–∏–µ
    player.Character = fakeChar
    player.Character.HumanoidRootPart.CFrame = CFrame.new(0, 50, 0)
    
    -- –î–µ–ª–∞–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω–æ–≥–æ –ø–µ—Ä—Å–æ–Ω–∞–∂–∞ –ø—Ä–∏–∑—Ä–∞–∫–æ–º
    for _, part in pairs(player.Character:GetDescendants()) do
        if part:IsA("BasePart") then
            part.Transparency = 1
            part.CanCollide = false
        end
    end
    
    -- –§–∏–∫—Å –∫–∞–º–µ—Ä—ã
    workspace.CurrentCamera.CameraSubject = fakeChar.Humanoid
end

-- 2. –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ
local function protectionSystem()
    RunService.Heartbeat:Connect(function()
        -- –ï—Å–ª–∏ —Å–µ—Ä–≤–µ—Ä –ø—ã—Ç–∞–µ—Ç—Å—è —Å–±—Ä–æ—Å–∏—Ç—å –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            if player.Character.Humanoid.Health <= 0 then
                player.Character.Humanoid.Health = 100
                player.Character.Humanoid:ChangeState(Enum.HumanoidStateType.Running)
            end
        end
        
        -- –ï—Å–ª–∏ –ø–æ—Ç–µ—Ä—è–ª–∏ –∫–æ–Ω—Ç—Ä–æ–ª—å
        if workspace:FindFirstChild("Fake_"..player.Name) and 
           not player.Character == workspace["Fake_"..player.Name] then
            hijackCharacter()
        end
    end)
end

-- –ü–µ—Ä–≤—ã–π –∑–∞–ø—É—Å–∫
hijackCharacter()
protectionSystem()

print("üï¥Ô∏è –ü–µ—Ä—Å–æ–Ω–∞–∂-–ø—Ä–∏–∑—Ä–∞–∫ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω! –°–µ—Ä–≤–µ—Ä —Å—á–∏—Ç–∞–µ—Ç –≤–∞—Å –º–µ—Ä—Ç–≤—ã–º, –Ω–æ –≤—ã –∂–∏–≤—ã")
