local bandage = workspace:WaitForChild("RuntimeItems"):WaitForChild("Bandage")

-- –§—É–Ω–∫—Ü–∏—è –¥–ª—è –±–µ–∑–æ–ø–∞—Å–Ω–æ–≥–æ —á—Ç–µ–Ω–∏—è —Å–∫—Ä–∏–ø—Ç–æ–≤
local function scanScripts(object)
    print("üîç –ê–Ω–∞–ª–∏–∑ –æ–±—ä–µ–∫—Ç–∞:", object:GetFullName())
    
    -- –ü—Ä–æ–≤–µ—Ä—è–µ–º –≤—Å–µ –≤–∏–¥—ã —Å–∫—Ä–∏–ø—Ç–æ–≤
    local scriptTypes = {"Script", "LocalScript", "ModuleScript"}
    
    for _, scriptType in ipairs(scriptTypes) do
        for _, script in ipairs(object:GetChildren()) do
            if script:IsA(scriptType) then
                print("\nüìú –ù–∞–π–¥–µ–Ω —Å–∫—Ä–∏–ø—Ç:")
                print("   –¢–∏–ø:", script.ClassName)
                print("   –ò–º—è:", script.Name)
                print("   –ü—É—Ç—å:", script:GetFullName())
                
                -- –ë–µ–∑–æ–ø–∞—Å–Ω–æ–µ —á—Ç–µ–Ω–∏–µ –∏—Å—Ö–æ–¥–Ω–æ–≥–æ –∫–æ–¥–∞
                pcall(function()
                    print("   –ö–æ–¥:")
                    print("   " .. string.rep("-", 30))
                    print(script.Source)
                    print("   " .. string.rep("-", 30))
                end)
            end
        end
    end
end

-- –ê–Ω–∞–ª–∏–∑–∏—Ä—É–µ–º —Å–∞–º –±–∞–Ω–¥–∞–∂ –∏ –≤—Å–µ –µ–≥–æ –¥–æ—á–µ—Ä–Ω–∏–µ –æ–±—ä–µ–∫—Ç—ã
scanScripts(bandage)
for _, child in ipairs(bandage:GetDescendants()) do
    scanScripts(child)
end

print("\n‚úÖ –ê–Ω–∞–ª–∏–∑ –∑–∞–≤–µ—Ä—à–µ–Ω! –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –∫–æ–Ω—Å–æ–ª—å (F9)")
