local Players = game:GetService("Players")
local player = Players.LocalPlayer
local RunService = game:GetService("RunService")

-- 1. –§—É–Ω–∫—Ü–∏—è –ø–µ—Ä–µ–º–µ—â–µ–Ω–∏—è —Ö–∏—Ç–±–æ–∫—Å–∞
local function exileHitbox()
    if not player.Character then return end
    
    -- –ù–∞—Ö–æ–¥–∏–º –≤—Å–µ –∫–æ–ª–ª–∞–π–¥–µ—Ä—ã —É—Ä–æ–Ω–∞
    for _, part in pairs(player.Character:GetDescendants()) do
        if part:IsA("BasePart") and part.CanCollide then
            -- –ü–µ—Ä–µ–º–µ—â–∞–µ–º –≤ "–∏–∑–≥–Ω–∞–Ω–∏–µ" (–¥–∞–ª–µ–∫–æ –∑–∞ –∫–∞—Ä—Ç—É)
            part.CFrame = CFrame.new(0, -1000, 0)
            part.Anchored = true
            part.Transparency = 1
            part.CanCollide = false
            
            -- –ó–∞—â–∏—Ç–∞ –æ—Ç –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è
            part:GetPropertyChangedSignal("CFrame"):Connect(function()
                part.CFrame = CFrame.new(0, -1000, 0)
            end)
        end
    end
end

-- 2. –ó–∞—â–∏—Ç–∞ –æ—Ç "–ø–æ—Ç–µ—Ä–∏" –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
local function characterProtection()
    RunService.Heartbeat:Connect(function()
        if not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then
            player:LoadCharacter()
            task.wait(0.5)
            exileHitbox()
        end
    end)
end

-- 3. –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è –∞–∫—Ç–∏–≤–∞—Ü–∏—è
player.CharacterAdded:Connect(function(char)
    task.wait(0.3) -- –ñ–¥—ë–º –ø–æ–ª–Ω–æ–π –∑–∞–≥—Ä—É–∑–∫–∏
    exileHitbox()
    
    -- –î–æ–ø. –∑–∞—â–∏—Ç–∞ –¥–ª—è –Ω–æ–≤—ã—Ö —á–∞—Å—Ç–µ–π
    char.DescendantAdded:Connect(function(part)
        if part:IsA("BasePart") then
            task.wait()
            exileHitbox()
        end
    end)
end)

-- –ü–µ—Ä–≤—ã–π –∑–∞–ø—É—Å–∫
if player.Character then
    exileHitbox()
end
characterProtection()

print("üöÄ –•–∏—Ç–±–æ–∫—Å –∏–∑–≥–Ω–∞–Ω! –í–∞—Å –Ω–µ–≤–æ–∑–º–æ–∂–Ω–æ –∞—Ç–∞–∫–æ–≤–∞—Ç—å")
