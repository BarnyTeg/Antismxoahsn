local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- 1. –ù–∞—Ö–æ–¥–∏–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–π –±–∞–Ω–¥–∞–∂
local originalBandage = workspace:WaitForChild("RuntimeItems"):WaitForChild("Bandage")

-- 2. –°–æ–∑–¥–∞–µ–º –∫–æ–ø–∏—é —Å —É–Ω–∏–∫–∞–ª—å–Ω—ã–º ID
local bandageCopy = originalBandage:Clone()
bandageCopy.Name = "Bandage_Copy_"..os.time()
bandageCopy:SetAttribute("UniqueID", math.random(10000,99999))
bandageCopy.Parent = workspace

-- 3. –≠–º—É–ª—è—Ü–∏—è —Å–∏—Å—Ç–µ–º–Ω—ã—Ö –≤—ã–∑–æ–≤–æ–≤ (–∏–∑ –≤–∞—à–∏—Ö –ª–æ–≥–æ–≤)
local startDrag = ReplicatedStorage:WaitForChild("RequestStartDrag")
local stopDrag = ReplicatedStorage:WaitForChild("RequestStopDrag")

-- –§—É–Ω–∫—Ü–∏—è "–í–∑—è—Ç—å –≤ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å" (–∫–∞–∫ –≤ –ª–æ–≥–∞—Ö)
local function takeToInventory()
    startDrag:FireServer(true, bandageCopy.Name, nil)
    wait(0.5)
    stopDrag:FireServer(true, "")
    print("‚úÖ –ü—Ä–µ–¥–º–µ—Ç –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å (—ç–º—É–ª—è—Ü–∏—è –ª–æ–≥–æ–≤)")
end

-- –§—É–Ω–∫—Ü–∏—è "–ü–æ–¥–Ω—è—Ç—å –≤ —Ä—É–∫–∏"
local function equipBandage()
    startDrag:FireServer(true, bandageCopy.Name, nil)
    print("‚úã –ü—Ä–µ–¥–º–µ—Ç –≤ —Ä—É–∫–∞—Ö (—ç–º—É–ª—è—Ü–∏—è –ª–æ–≥–∞ [19:55:25])")
end
for _, remote in ipairs(game:GetService("ReplicatedStorage"):GetDescendants() do
    if remote:IsA("RemoteEvent") then
        remote.OnClientEvent:Connect(function(...)
            print("üì° –°–æ–±—ã—Ç–∏–µ:", remote.Name, "–ê—Ä–≥—É–º–µ–Ω—Ç—ã:", ...)
            setclipboard(remote.Name .. " | " .. table.concat({...}, ", "))
        end)
    end
end

-- 4. –¢–µ—Å—Ç–æ–≤—ã–µ –∫–Ω–æ–ø–∫–∏ (–¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤)
local gui = Instance.new("ScreenGui")
gui.Parent = player.PlayerGui

local takeBtn = Instance.new("TextButton")
takeBtn.Size = UDim2.new(0.3, 0, 0.1, 0)
takeBtn.Position = UDim2.new(0.5, 0, 0.7, 0)
takeBtn.Text = "–í–ó–Ø–¢–¨"
takeBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
takeBtn.Parent = gui
takeBtn.MouseButton1Click:Connect(takeToInventory)

local equipBtn = Instance.new("TextButton")
equipBtn.Size = UDim2.new(0.3, 0, 0.1, 0)
equipBtn.Position = UDim2.new(0.5, 0, 0.85, 0)
equipBtn.Text = "–ü–û–î–ù–Ø–¢–¨"
equipBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
equipBtn.Parent = gui
equipBtn.MouseButton1Click:Connect(equipBandage)

print("–ì–æ—Ç–æ–≤–æ! –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –∫–Ω–æ–ø–∫–∏ –¥–ª—è —Ç–µ—Å—Ç–∞.")
