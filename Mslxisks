local player = game:GetService("Players").LocalPlayer
local RunService = game:GetService("RunService")

-- 1. –û—Ç–∫–ª—é—á–∞–µ–º –≤–∏–∑—É–∞–ª—å–Ω—É—é —Å–º–µ—Ä—Ç—å
local function blockDeathEffects()
    if not player.Character then return end
    
    -- –£–±–∏—Ä–∞–µ–º —ç—Ñ—Ñ–µ–∫—Ç—ã —Å–º–µ—Ä—Ç–∏
    for _, v in pairs(player.Character:GetDescendants()) do
        if v:IsA("ParticleEmitter") or v:IsA("Debris") then
            v:Destroy()
        end
    end
    
    -- –ë–ª–æ–∫–∏—Ä—É–µ–º –∞–Ω–∏–º–∞—Ü–∏—é —Å–º–µ—Ä—Ç–∏
    local humanoid = player.Character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, false)
    end
end

-- 2. –û–±–Ω—É–ª—è–µ–º —Ç–∞–π–º–µ—Ä respawn
local function hackRespawnTimer()
    local oldRespawn = player.RespawnTime
    player.RespawnTime = 0 -- –ú–≥–Ω–æ–≤–µ–Ω–Ω—ã–π —Ä–µ—Å–ø–∞–≤–Ω
    
    -- –ó–∞—â–∏—Ç–∞ –æ—Ç —Å–±—Ä–æ—Å–∞
    player:GetPropertyChangedSignal("RespawnTime"):Connect(function()
        if player.RespawnTime ~= 0 then
            player.RespawnTime = 0
        end
    end)
end

-- 3. –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π —Ä–µ—Å–ø–∞–≤–Ω (–Ω–µ–≤–∏–¥–∏–º—ã–π)
local function instantRespawn()
    player.CharacterAdded:Connect(function()
        task.wait(0.1) -- –ñ–¥—ë–º –∑–∞–≥—Ä—É–∑–∫–∏
        
        -- –í–æ–∑–≤—Ä–∞—â–∞–µ–º "–º—ë—Ä—Ç–≤–æ–≥–æ" –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
        if player.Character then
            player.Character.HumanoidRootPart.CFrame = CFrame.new(0, 50, 0)
            blockDeathEffects()
        end
    end)
end

-- 4. –ó–∞—â–∏—Ç–∞ –æ—Ç –≤—ã–∫–∏–¥—ã–≤–∞–Ω–∏—è
local function antiKick()
    local meta = getrawmetatable(game)
    local oldNamecall = meta.__namecall
    
    setreadonly(meta, false)
    
    meta.__namecall = newcclosure(function(self, ...)
        local method = getnamecallmethod()
        
        -- –ë–ª–æ–∫–∏—Ä—É–µ–º –≤—ã–∫–∏–¥—ã–≤–∞–Ω–∏–µ
        if method == "Kick" or method == "Destroy" then
            return nil
        end
        
        return oldNamecall(self, ...)
    end)
end

-- –ó–∞–ø—É—Å–∫–∞–µ–º —Å–∏—Å—Ç–µ–º—É
blockDeathEffects()
hackRespawnTimer()
instantRespawn()
antiKick()

print("üë§ –†–ï–ñ–ò–ú –§–ê–ù–¢–û–ú–ê: –í–∞—Å –Ω–µ–≤–æ–∑–º–æ–∂–Ω–æ —É–±–∏—Ç—å –∏–ª–∏ –≤—ã–∫–∏–Ω—É—Ç—å")
