-- Поиск bonds в Players.LocalPlayer
local player = game:GetService("Players").LocalPlayer
local bondValue = nil

for _, v in pairs(player:GetDescendants()) do
    if v:IsA("IntValue") or v:IsA("NumberValue") then
        if v.Name:lower():find("bond") then
            bondValue = v
            print("Нашёл bonds: " .. v:GetFullName() .. " = " .. v.Value)
            break
        end
    end
end

if bondValue then
    bondValue.Value = 99999 -- Накручиваем до 99999
    print("Накрутил bonds до " .. bondValue.Value)
else
    print("Не нашёл bonds в LocalPlayer, ищем дальше...")
end

-- Если в UI (например, "Bonds: 110")
for _, v in pairs(player.PlayerGui:GetDescendants()) do
    if v:IsA("TextLabel") and v.Text:find("Bonds") then
        v.Text = "Bonds: 99999"
        print("Сменил UI на 99999")
        break
    end
end
