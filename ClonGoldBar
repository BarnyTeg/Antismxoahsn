-- Получение оригинального золотого слитка
local original = game:GetService("Workspace").RuntimeItems.GoldBar

-- Если оригинальный золотой слиток найден, клонируем его
if original then
    -- Создаем новый объект
    local newGoldBar = Instance.new("Model")
    newGoldBar.Name = "GoldBar_Copy"
    newGoldBar.Parent = game:GetService("Workspace").RuntimeItems

    -- Клонируем каждый объект отдельно и добавляем к новому объекту
    local objectInfo = original.ObjectInfo:Clone()
    objectInfo.Parent = newGoldBar

    local title = original.ObjectInfo.Title:Clone()
    title.Parent = objectInfo

    local textLabel = original.ObjectInfo.TextLabel:Clone()
    textLabel.Parent = objectInfo

    local uiListLayout = original.ObjectInfo.UIListLayout:Clone()
    uiListLayout.Parent = objectInfo

    local propGoldBar = original.Prop_GoldBar:Clone()
    propGoldBar.Parent = newGoldBar

    local goldBar = original:Clone()
    goldBar.Name = "GoldBar"
    goldBar.Parent = newGoldBar
end
