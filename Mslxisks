local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()

local PhantomForcesWindow = Library:NewWindow("Dead Rails Cheats")
local DragonCheats = PhantomForcesWindow:NewSection("Dragon Spawner")

-- Переменные
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local rootPart = character:WaitForChild("HumanoidRootPart")
local workspace = game.Workspace
local replicatedStorage = game:GetService("ReplicatedStorage")

-- Функция для спавна дракона
local function spawnDragon()
    -- Предполагаем, что ты загрузил модель в ReplicatedStorage под именем "BlackDragon"
    local dragonModel = replicatedStorage:FindFirstChild("BlackDragon")
    if not dragonModel then
        print("Модель BlackDragon не найдена! Убедись, что ты загрузил её в ReplicatedStorage.")
        return
    end

    -- Клонируем модель
    local dragon = dragonModel:Clone()
    dragon.Name = "DragonCompanion"

    -- Масштабируем до 20 метров (примерно 71 студс)
    local heightInStuds = 71 -- 20 метров / 0.28 = 71 студс
    local humanoid = dragon:FindFirstChildOfClass("Humanoid")
    if humanoid then
        local originalHeight = humanoid.HipHeight
        humanoid.HipHeight = heightInStuds
        local scaleFactor = heightInStuds / originalHeight
        for _, part in pairs(dragon:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Size = part.Size * scaleFactor
            end
        end
    else
        -- Если хуманоида нет, масштабируем вручную
        for _, part in pairs(dragon:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Size = part.Size * (heightInStuds / 5) -- Предполагаем, что исходная высота ~5 студс
            end
        end
    end

    -- Позиция спавна (10 студс от игрока)
    local spawnDistance = 10
    local spawnPos = rootPart.CFrame * CFrame.new(0, heightInStuds / 2, -spawnDistance)
    dragon:SetPrimaryPartCFrame(spawnPos)

    -- Отключаем физику, чтобы дракон просто стоял
    for _, part in pairs(dragon:GetDescendants()) do
        if part:IsA("BasePart") then
            part.Anchored = true
        end
    end

    -- Делаем дракона видимым для всех
    dragon.Parent = workspace
end

-- Кнопка для спавна дракона
DragonCheats:CreateButton("Spawn Dragon", function()
    spawnDragon()
end)
