-- Ultra Mobile God Mode (–¥–ª—è Android/iOS)
local player = game:GetService("Players").LocalPlayer
local RunService = game:GetService("RunService")

-- 1. –ü—Ä–æ—Å—Ç–µ–π—à–∏–π, –Ω–æ —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω—ã–π God Mode
local function mobileGodMode()
    while task.wait(0.1) do
        pcall(function()
            if player.Character then
                local humanoid = player.Character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    -- –ñ—ë—Å—Ç–∫–∏–π –∫–æ–Ω—Ç—Ä–æ–ª—å –∑–¥–æ—Ä–æ–≤—å—è
                    humanoid.MaxHealth = 100
                    humanoid.Health = 100
                    
                    -- –≠–∫—Å—Ç—Ä–µ–Ω–Ω–æ–µ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ
                    if humanoid.Health <= 0 then
                        humanoid:ChangeState(Enum.HumanoidStateType.Running)
                    end
                end
            end
        end)
    end
end

-- 2. –ë–∞–∑–æ–≤—ã–π Kill Aura
local function mobileKillAura()
    while task.wait(0.3) do
        pcall(function()
            if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local root = player.Character.HumanoidRootPart
                
                for _, npc in ipairs(workspace:GetDescendants()) do
                    if npc:IsA("Model") and npc:FindFirstChildOfClass("Humanoid") then
                        local npcRoot = npc:FindFirstChild("HumanoidRootPart")
                        if npcRoot and (npcRoot.Position - root.Position).Magnitude < 20 then
                            npc:Destroy()
                        end
                    end
                end
            end
        end)
    end
end

-- –ó–∞–ø—É—Å–∫
coroutine.wrap(mobileGodMode)()
coroutine.wrap(mobileKillAura)()

print("üì± MOBILE GOD MODE –ê–ö–¢–ò–í–ò–†–û–í–ê–ù")
