-- Базовые переменные
local player = game:GetService("Players").LocalPlayer
local workspace = game:GetService("Workspace")
local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")

-- Функция поиска RemoteEvent (взято из Skull Hub)
local function findRemote()
    local remote = nil
    for _, v in pairs(game:GetService("ReplicatedStorage"):GetDescendants()) do
        if v:IsA("RemoteEvent") and (v.Name:lower():find("collect") or v.Name:find("pickup") or v.Name:find("item") or v.Name:find("gold")) then
            remote = v
            print("Нашёл RemoteEvent: " .. v.Name)
            break
        end
    end
    return remote
end

-- Спам сбора GoldBar (взято из A Dusty Trip Dupe)
local function spamCollectGoldBar()
    local remote = findRemote()
    if not remote then
        print("RemoteEvent не нашёл, ищи в ReplicatedStorage через Dex!")
        return
    end
    local goldBar = nil
    for _, v in pairs(workspace.RuntimeItems:GetChildren()) do
        if v.Name == "GoldBar" and v:IsA("Model") then
            goldBar = v
            break
        end
    end
    if goldBar then
        for i = 1, 50 do
            remote:FireServer(goldBar) -- Спамим объект GoldBar
            wait(0.05)
        end
        print("Заспамил сбор GoldBar, чекни bonds!")
    else
        print("GoldBar не нашёл на карте!")
    end
end

-- Клонирование GoldBar (взято из Blox Fruits Item Dupe)
local function dupeGoldBar()
    if not hrp then print("Где твой перс?"); return end
    local original = nil
    for _, v in pairs(workspace.RuntimeItems:GetChildren()) do
        if v.Name == "GoldBar" and v:IsA("Model") then
            original = v
            break
        end
    end
    if original then
        for i = 1, 10 do
            local clone = original:Clone()
            clone.Parent = workspace.RuntimeItems
            local part = clone.PrimaryPart or clone:FindFirstChildWhichIsA("BasePart")
            if part then
                part.CFrame = hrp.CFrame + Vector3.new(math.random(-5, 5), 5, math.random(-5, 5))
            end
            wait(0.1)
        end
        print("Наклепал 10 клонов GoldBar, попробуй взять!")
    else
        print("Оригинальный GoldBar не нашёл!")
    end
end

-- Автосбор через телепорт перса (взято из SpiderXHub)
local function autoCollect()
    if not hrp then return end
    for _, v in pairs(workspace.RuntimeItems:GetChildren()) do
        if v.Name == "GoldBar" and v:IsA("Model") then
            local part = v.PrimaryPart or v:FindFirstChildWhichIsA("BasePart")
            if part then
                hrp.CFrame = part.CFrame
                wait(0.5) -- Даём серверу время
            end
        end
    end
    print("Пробежался по GoldBar, bonds должны капать!")
end

-- Выполняем
spamCollectGoldBar() -- Спамим сбор
dupeGoldBar() -- Плодим клоны
autoCollect() -- Автосбор
