local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()

local PhantomForcesWindow = Library:NewWindow("Dead Rails Cheats")
local MonsterCheats = PhantomForcesWindow:NewSection("Reptile Companion")

-- Переменные
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local rootPart = character:WaitForChild("HumanoidRootPart")
local workspace = game.Workspace
local replicatedStorage = game:GetService("ReplicatedStorage")

-- Функция для создания рептилии
local function spawnReptile()
    -- Ищем модель оборотня в игре (будем использовать её как основу)
    local baseModel = replicatedStorage:FindFirstChild("Werewolf") or workspace:FindFirstChild("Werewolf")
    if not baseModel then
        print("Модель Werewolf не найдена! Попробуй заспавнить оборотня в игре сначала.")
        return
    end

    -- Клонируем модель
    local reptile = baseModel:Clone()
    reptile.Name = "ReptileCompanion"
    
    -- Настраиваем размер (3 метра в высоту)
    local humanoid = reptile:FindFirstChildOfClass("Humanoid")
    if humanoid then
        local originalHeight = humanoid.HipHeight
        humanoid.HipHeight = 3 -- Примерно 3 метра
        for _, part in pairs(reptile:GetDescendants()) do
            if part:IsA("BasePart") then
                local scaleFactor = 3 / originalHeight
                part.Size = part.Size * scaleFactor
                -- Меняем цвет, чтобы выглядело как рептилия (зелёный оттенок)
                part.BrickColor = BrickColor.new("Camo")
            end
        end
    end

    -- Делаем рептилию неуязвимой
    if humanoid then
        humanoid.MaxHealth = math.huge
        humanoid.Health = math.huge
    end

    -- Позиция спавна (5-10 студс от игрока)
    local spawnDistance = 10
    local spawnPos = rootPart.CFrame * CFrame.new(0, 2, -spawnDistance)
    reptile:SetPrimaryPartCFrame(spawnPos)
    reptile.Parent = workspace

    -- Добавляем звук рычания
    local sound = Instance.new("Sound")
    sound.Name = "Roar"
    sound.SoundId = "rbxassetid://9120386436" -- Стандартный звук рычания в Roblox
    sound.Volume = 1
    sound.Looped = true
    sound.PlaybackSpeed = 0.8
    sound.Parent = reptile:FindFirstChild("Head") or reptile.PrimaryPart
    sound:Play()

    -- Настраиваем поведение (следует за игроком, атакует мобов)
    local aggroScript = Instance.new("Script")
    aggroScript.Name = "ReptileAI"
    aggroScript.Parent = reptile
    aggroScript.Source = [[
        local reptile = script.Parent
        local humanoid = reptile:FindFirstChildOfClass("Humanoid")
        local rootPart = reptile:FindFirstChild("HumanoidRootPart")
        local player = game.Players.LocalPlayer
        local playerRoot = player.Character and player.Character:FindFirstChild("HumanoidRootPart")

        while true do
            if playerRoot then
                local distanceToPlayer = (rootPart.Position - playerRoot.Position).Magnitude
                -- Следуем за игроком, если слишком далеко
                if distanceToPlayer > 10 then
                    humanoid:MoveTo(playerRoot.Position)
                end

                -- Ищем ближайших NPC
                for _, obj in pairs(workspace:GetDescendants()) do
                    if obj:IsA("Model") and obj ~= reptile and obj:FindFirstChildOfClass("Humanoid") then
                        local targetHumanoid = obj:FindFirstChildOfClass("Humanoid")
                        local targetRoot = obj:FindFirstChild("HumanoidRootPart")
                        if targetHumanoid and targetRoot and not game.Players:GetPlayerFromCharacter(obj) then
                            local distance = (rootPart.Position - targetRoot.Position).Magnitude
                            if distance <= 30 then
                                -- Двигаемся к цели
                                humanoid:MoveTo(targetRoot.Position)
                                -- Атака
                                if distance <= 5 then
                                    targetHumanoid:TakeDamage(40) -- Высокий урон
                                end
                            end
                        end
                    end
                end
            end
            wait(0.1)
        end
    ]]

    -- Делаем рептилию видимой для всех (серверный объект)
    reptile.Parent = workspace
end

-- Кнопка для спавна рептилии
MonsterCheats:CreateButton("Spawn Reptile Companion", function()
    spawnReptile()
end)
