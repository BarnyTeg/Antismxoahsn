local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")

local clonedItems = ReplicatedStorage:WaitForChild("ClonedItems")
local bandageTemplate = clonedItems:WaitForChild("Bandage", 10) -- ждём максимум 10 сек

if bandageTemplate then
    local newBandage = bandageTemplate:Clone()
    newBandage.Parent = workspace.RuntimeItems

    local player = Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

    -- появится перед игроком
    newBandage:SetPrimaryPartCFrame(humanoidRootPart.CFrame * CFrame.new(0, 0, -5))
    
    print("[+] Новый бандаж создан в workspace.RuntimeItems")
else
    warn("[!] Bandage не найден в ClonedItems")
end
