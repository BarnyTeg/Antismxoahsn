local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")

-- Функция для вывода логов (замени print, если он не работает)
local function log(message)
    print(message) -- Если print не работает, используй свой способ вывода
end

-- Папка с оригинальным бандажом
local clonedFolder = ReplicatedStorage:WaitForChild("ClonedItems")
local clonedBandage = clonedFolder:FindFirstChild("Bandage")

if clonedBandage then
    -- Клонируем бандаж
    local newBandage = clonedBandage:Clone()
    newBandage.Parent = Workspace.RuntimeItems
    
    -- Проверяем наличие скриптов в оригинале
    for _, child in pairs(clonedBandage:GetChildren()) do
        if child:IsA("LocalScript") or child:IsA("Script") then
            log("[+] Найден скрипт в оригинале: " .. child.Name)
            -- Копируем скрипт в клон и пытаемся его активировать
            local clonedScript = newBandage:FindFirstChild(child.Name)
            if clonedScript then
                if clonedScript:IsA("LocalScript") then
                    -- Для LocalScript пытаемся "перезапустить" через родителя
                    clonedScript.Disabled = true
                    clonedScript.Disabled = false
                    log("[+] Локальный скрипт " .. child.Name .. " активирован")
                elseif clonedScript:IsA("Script") then
                    -- Для серверного скрипта тоже пробуем перезапуск
                    clonedScript.Disabled = true
                    clonedScript.Disabled = false
                    log("[+] Серверный скрипт " .. child.Name .. " активирован")
                end
            end
        end
    end
    
    -- Если есть кнопки, логируем их
    for _, child in pairs(newBandage:GetChildren()) do
        if child:IsA("TextButton") or child:IsA("ImageButton") then
            log("[+] Найдена кнопка в клоне: " .. child.Name)
        end
    end
    
    log("[+] Бандаж скопирован в RuntimeItems")
else
    log("[-] Бандаж не найден в ClonedItems")
end
