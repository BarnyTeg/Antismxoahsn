local player = game:GetService("Players").LocalPlayer
local forcefield = nil

-- 1. –°–æ–∑–¥–∞—ë–º –≤–µ—á–Ω—ã–π —â–∏—Ç (–∞–Ω–∞–ª–æ–≥ —Å–∏–Ω–µ–π –æ–±–æ–ª–æ—á–∫–∏)
local function createGodShield()
    if player.Character then
        -- –£–¥–∞–ª—è–µ–º —Å—Ç–∞—Ä—ã–π —â–∏—Ç (–µ—Å–ª–∏ –µ—Å—Ç—å)
        if forcefield then forcefield:Destroy() end
        
        -- –°–æ–∑–¥–∞—ë–º –Ω–æ–≤—ã–π ForceField (—Å–∏–Ω—è—è –æ–±–æ–ª–æ—á–∫–∞)
        forcefield = Instance.new("ForceField")
        forcefield.Name = "GOD_SHIELD"
        forcefield.Parent = player.Character
        
        -- –î–æ–±–∞–≤–ª—è–µ–º –≤–∏–∑—É–∞–ª—å–Ω—ã–π —ç—Ñ—Ñ–µ–∫—Ç (–µ—Å–ª–∏ –Ω—É–∂–Ω–æ)
        local shieldEffect = Instance.new("ForceFieldEffect")
        shieldEffect.Visible = true
        shieldEffect.Color3 = Color3.new(0, 0.5, 1) -- –°–∏–Ω–∏–π —Ü–≤–µ—Ç
        shieldEffect.Parent = forcefield
    end
end

-- 2. –ó–∞—â–∏—Ç–∞ –æ—Ç —Å–±—Ä–æ—Å–∞ —â–∏—Ç–∞
local function shieldProtection()
    game:GetService("RunService").Heartbeat:Connect(function()
        pcall(function()
            -- –ï—Å–ª–∏ —â–∏—Ç–∞ –Ω–µ—Ç - —Å–æ–∑–¥–∞—ë–º –∑–∞–Ω–æ–≤–æ
            if not player.Character or not player.Character:FindFirstChild("GOD_SHIELD") then
                createGodShield()
            end
            
            -- –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω–∞—è –∑–∞—â–∏—Ç–∞ –∑–¥–æ—Ä–æ–≤—å—è
            if player.Character and player.Character:FindFirstChild("Humanoid") then
                player.Character.Humanoid.Health = player.Character.Humanoid.MaxHealth
            end
        end)
    end)
end

-- 3. –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è –∞–∫—Ç–∏–≤–∞—Ü–∏—è
player.CharacterAdded:Connect(createGodShield)
createGodShield()
shieldProtection()

print("üõ°Ô∏è –°–ò–ù–ò–ô –©–ò–¢ –ê–ö–¢–ò–í–ò–†–û–í–ê–ù (–ë–µ—Å—Å–º–µ—Ä—Ç–∏–µ –≤–∫–ª—é—á–µ–Ω–æ)")
