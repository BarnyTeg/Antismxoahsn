local radius = 15 -- —Ä–∞–¥–∏—É—Å –≤ –º–µ—Ç—Ä–∞—Ö
local player = game:GetService("Players").LocalPlayer

-- –ë–µ–∑–æ–ø–∞—Å–Ω–æ–µ –ø–æ–ª—É—á–µ–Ω–∏–µ ID
local function getObjectId(obj)
    local success, id = pcall(function() return obj:GetDebugId(2) end)
    return success and id or "N/A"
end

-- –ë–µ–∑–æ–ø–∞—Å–Ω–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞ —Ä–∞–¥–∏—É—Å–∞
local function isInRadius(obj, centerPos)
    local success, position = pcall(function()
        if obj:IsA("BasePart") then
            return obj.Position
        elseif obj:IsA("Model") then
            return obj.PrimaryPart and obj.PrimaryPart.Position or nil
        else
            local part = obj:FindFirstChildWhichIsA("BasePart")
            return part and part.Position or nil
        end
    end)
    return success and position and (position - centerPos).Magnitude <= radius
end

-- –ü–æ–ª—É—á–µ–Ω–∏–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ–± –æ–±—ä–µ–∫—Ç–µ
local function getObjectInfo(obj)
    local info = {
        "üî∑ "..obj.Name.." ("..obj.ClassName..")",
        "üÜî ID: "..getObjectId(obj),
        "üìÅ –ü—É—Ç—å: "..obj:GetFullName()
    }
    
    -- –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —Å–≤–æ–π—Å—Ç–≤–∞
    if obj:IsA("BasePart") then
        table.insert(info, "üìç –ü–æ–∑–∏—Ü–∏—è: "..tostring(obj.Position))
        table.insert(info, "üìè –†–∞–∑–º–µ—Ä: "..tostring(obj.Size))
    end
    
    -- –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –¥–µ—Ç—è—Ö
    local children = obj:GetChildren()
    if #children > 0 then
        table.insert(info, "üßí –î–µ—Ç–∏ ("..#children.."):")
        for _, child in ipairs(children) do
            table.insert(info, "   ‚îú‚îÄ "..child.Name.." ("..child.ClassName..") | ID: "..getObjectId(child))
        end
    end
    
    return table.concat(info, "\n")
end

-- –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è —Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
local function scanArea()
    local char = player.Character
    if not char then return end
    
    local rootPart = char:FindFirstChild("HumanoidRootPart")
    if not rootPart then return end
    
    local playerPos = rootPart.Position
    local result = {"=== –û–ë–™–ï–ö–¢–´ –í –†–ê–î–ò–£–°–ï "..radius.."–º ==="}
    local count = 0
    
    for _, obj in pairs(workspace:GetDescendants()) do
        if isInRadius(obj, playerPos) then
            local success, info = pcall(getObjectInfo, obj)
            if success then
                table.insert(result, "\n"..info)
                count = count + 1
            end
        end
    end
    
    table.insert(result, "\n=== –ù–ê–ô–î–ï–ù–û –û–ë–™–ï–ö–¢–û–í: "..count.." ===")
    local output = table.concat(result, "\n")
    
    setclipboard(output)
    print(output)
    print("\n‚úÖ –î–∞–Ω–Ω—ã–µ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω—ã –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞!")
end

-- –ó–∞–ø—É—Å–∫ —Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏—è
scanArea()

-- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ (–ø–æ –∂–µ–ª–∞–Ω–∏—é)
while true do
    wait(30)
    scanArea()
end
