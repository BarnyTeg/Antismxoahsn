local player = game:GetService("Players").LocalPlayer
local replicated = game:GetService("ReplicatedStorage")

-- Найти первого врага
local enemy = nil
for _, v in pairs(game:GetService("Workspace"):GetDescendants()) do
    if v:FindFirstChild("Humanoid") and v ~= player.Character then
        enemy = v
        print("Тестовый враг: " .. v.Name)
        break
    end
end

if enemy then
    local shoot = replicated.Remotes.Weapon:FindFirstChild("Shoot")
    local replicateShot = replicated.Remotes.Weapon:FindFirstChild("ReplicateShot")
    local ragdoll = replicated.Shared.Remotes:FindFirstChild("RagdollFlop")

    if shoot then
        shoot:FireServer(enemy.Humanoid, 1000) -- Пробуем бить Humanoid
        print("Тест Shoot на " .. enemy.Name)
    end
    wait(1)
    if replicateShot then
        replicateShot:FireServer(enemy, 1000) -- Пробуем весь объект
        print("Тест ReplicateShot на " .. enemy.Name)
    end
    wait(1)
    if ragdoll then
        ragdoll:FireServer(enemy) -- Пробуем рэгдолл как смерть
        print("Тест RagdollFlop на " .. enemy.Name)
    end
else
    print("Враг не найден, где они прячутся?")
end
