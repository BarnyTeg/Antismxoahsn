local Workspace = game:GetService("Workspace")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Создаём папку, если её нет
local clonedFolder = ReplicatedStorage:FindFirstChild("ClonedItems") or Instance.new("Folder", ReplicatedStorage)
clonedFolder.Name = "ClonedItems"

-- Следим за появлением бандажа
Workspace.RuntimeItems.ChildAdded:Connect(function(child)
    if child.Name == "Bandage" then
        print("[!] Бандаж найден: " .. child:GetFullName())

        -- Проверка на повторное добавление
        if not clonedFolder:FindFirstChild("Bandage") then
            local clone = child:Clone()
            clone.Parent = clonedFolder
            print("[+] Бандаж клонирован в ReplicatedStorage.ClonedItems")
        else
            print("[-] Бандаж уже клонирован ранее.")
        end
    end
end)
