local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Параметры газеты (полностью кастомные)
local NEWSPAPER_DATA = {
    Name = "IndependentNewspaper",
    Size = Vector3.new(5, 5, 0.25),
    Color = Color3.fromRGB(210, 228, 186), -- RGB(0.82, 0.89, 0.73)
    Material = Enum.Material.Cardboard,
    Transparency = 0,
    Anchored = false,
    CanCollide = true,
    Elasticity = 0.5,
    Friction = 0.3
}

-- Генератор ID в стиле Roblox
local function generateRobloxId()
    return "1_"..tostring(math.random(20000, 30000))
end

-- Создание полностью нового объекта
local function createFromScratch()
    -- 1. Основной объект
    local newspaper = Instance.new("Part")
    
    -- 2. Применяем параметры
    for property, value in pairs(NEWSPAPER_DATA) do
        newspaper[property] = value
    end
    
    -- 3. Уникальные идентификаторы
    local objectId = generateRobloxId()
    newspaper:SetAttribute("UniqueId", objectId)
    
    -- 4. Физическая система
    local bodyForce = Instance.new("BodyForce")
    bodyForce.Force = Vector3.new(0, newspaper:GetMass() * workspace.Gravity, 0)
    bodyForce.Parent = newspaper
    
    -- 5. Система взаимодействий
    local clickDetector = Instance.new("ClickDetector")
    clickDetector.Parent = newspaper
    clickDetector.MouseClick:Connect(function()
        print("Газета", objectId, "использована")
        -- Ваш код взаимодействия
    end)
    
    -- 6. Создаем кастомные шаблоны
    local templateFolder = Instance.new("Folder")
    templateFolder.Name = "NewspaperTemplates"
    templateFolder.Parent = game:GetService("ReplicatedStorage")
    
    local mainTemplate = Instance.new("Part")
    mainTemplate.Name = "MainTemplate"
    mainTemplate.Size = NEWSPAPER_DATA.Size
    mainTemplate.Transparency = 0.7
    mainTemplate:SetAttribute("TemplateId", generateRobloxId())
    mainTemplate.Parent = templateFolder
    
    -- 7. Размещение в мире
    newspaper.Parent = workspace
    
    if player.Character then
        local root = player.Character:FindFirstChild("HumanoidRootPart")
        if root then
            newspaper.Position = root.Position + Vector3.new(0, 0, -3)
        end
    end
    
    print("✅ Создана автономная газета ID:", objectId)
    return newspaper
end

-- Создаем 3 уникальные газеты
for i = 1, 3 do
    createFromScratch()
    task.wait(0.3)
end
