local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer
local bandage = workspace:WaitForChild("RuntimeItems"):WaitForChild("Bandage")

-- –ù–∞—Ö–æ–¥–∏–º –Ω—É–∂–Ω—ã–π RemoteEvent
local startDragRemote = ReplicatedStorage:FindFirstChild("RequestStartDrag")
local stopDragRemote = ReplicatedStorage:FindFirstChild("RequestStopDrag")

local function takeBandage()
    if not startDragRemote then
        warn("–ù–µ –Ω–∞–π–¥–µ–Ω RequestStartDrag!")
        return
    end
    
    -- –≠–º—É–ª–∏—Ä—É–µ–º "–≤–∑—è—Ç–∏–µ" –±–∞–Ω–¥–∞–∂–∞
    startDragRemote:FireServer(true, bandage)
    print("üîÑ –û—Ç–ø—Ä–∞–≤–ª–µ–Ω –∑–∞–ø—Ä–æ—Å –Ω–∞ –ø–æ–¥–±–æ—Ä")
    
    -- –ß–µ—Ä–µ–∑ 0.5 —Å–µ–∫ —ç–º—É–ª–∏—Ä—É–µ–º "–ø–æ–ª–æ–∂–∏—Ç—å –≤ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å"
    task.wait(0.5)
    if stopDragRemote then
        stopDragRemote:FireServer(true)
        print("‚úÖ –ë–∞–Ω–¥–∞–∂ '–ø–æ–ª–æ–∂–µ–Ω' –≤ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å")
    end
end

-- –ö–Ω–æ–ø–∫–∞ –¥–ª—è —Ç–µ—Å—Ç–∞ (–µ—Å–ª–∏ –Ω—É–∂–Ω–æ)
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player.PlayerGui

local button = Instance.new("TextButton")
button.Text = "–í–ó–Ø–¢–¨ –ë–ê–ù–î–ê–ñ"
button.Size = UDim2.new(0.3, 0, 0.1, 0)
button.Position = UDim2.new(0.7, 0, 0.8, 0)
button.Parent = screenGui
button.MouseButton1Click:Connect(takeBandage)
