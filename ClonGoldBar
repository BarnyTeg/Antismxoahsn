local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- Функция для дюпа золотого слитка
local function duplicateGoldBar()
    -- Получаем оригинальный золотой слиток из Workspace
    local originalGoldBar = workspace.RuntimeItems.GoldBar.Prop_GoldBar

    if originalGoldBar then
        -- Клонируем золотой слиток
        local newGoldBar = originalGoldBar:Clone()

        -- Устанавливаем позицию нового слитка над головой игрока
        newGoldBar.Position = humanoidRootPart.Position + Vector3.new(0, 5, 0) -- 5 единиц над головой

        -- Устанавливаем родителя для нового слитка
        newGoldBar.Parent = workspace

        print("Золотой слиток дюпнут и спавнен над головой игрока!")
    else
        print("Оригинальный золотой слиток не найден!")
    end
end

-- Вызов функции дюпа
duplicateGoldBar()
