-- Простейший рабочий вертолет (только сиденье)
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")

-- Ждем загрузку игрока
local player = Players.LocalPlayer
while not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") do
    wait(0.1)
end

-- Позиция перед игроком
local spawnPos = player.Character.HumanoidRootPart.Position + player.Character.HumanoidRootPart.CFrame.LookVector * 5

-- Создаем сиденье
local seat = Instance.new("Seat")
seat.Name = "HelicopterSeat"
seat.Size = Vector3.new(3, 1, 3) -- Достаточно большой размер
seat.CFrame = CFrame.new(spawnPos + Vector3.new(0, 2, 0)) -- Чуть выше земли
seat.Anchored = false -- Должно быть false!
seat.CanCollide = true
seat.Parent = Workspace

-- Функция посадки
local function onTouch(hit)
    local humanoid = hit.Parent:FindFirstChildOfClass("Humanoid")
    if humanoid and humanoid == player.Character.Humanoid then
        humanoid.Sit = true -- Принудительно сажаем
        seat:Sit(humanoid) -- Альтернативный способ
        print("Игрок сел в вертолет!")
    end
end

seat.Touched:Connect(onTouch)

-- Уведомление
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "Вертолет",
    Text = "Подойдите к сиденью чтобы сесть",
    Duration = 5
})
