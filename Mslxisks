local Players = game:GetService("Players")
local player = Players.LocalPlayer

local function makeImmortal(character)
    local humanoid = character:WaitForChild("Humanoid")
    
    -- 1. Делаем здоровье "бесконечным"
    humanoid.MaxHealth = math.huge
    humanoid.Health = math.huge
    
    -- 2. Блокируем ЛЮБОЙ входящий урон (даже от 1000 зомби)
    if humanoid:FindFirstChild("TakeDamage") then
        humanoid.TakeDamage:Connect(function()
            return false -- Игнорируем урон
        end)
    end
    
    -- 3. Защита от принудительного убийства (если игра использует .Destroy)
    character:GetPropertyChangedSignal("Parent"):Connect(function()
        if not character.Parent then
            task.wait(0.1)
            player:LoadCharacter()
        end
    end)
end

-- Подключаемся к событию появления персонажа
player.CharacterAdded:Connect(makeImmortal)
if player.Character then
    makeImmortal(player.Character)
end
