-- Простой вертолёт под Arceus X (мобильный инжектор)
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local root = char:WaitForChild("HumanoidRootPart")

-- Создание модели вертолёта
local heli = Instance.new("Model", workspace)
heli.Name = "MobileHelicopter"

-- Тело вертолёта
local body = Instance.new("Part", heli)
body.Size = Vector3.new(6, 1, 10)
body.Position = root.Position + Vector3.new(0, 5, 0)
body.Anchored = false
body.BrickColor = BrickColor.new("Dark stone grey")
body.Name = "Body"

-- Сиденье
local seat = Instance.new("VehicleSeat", heli)
seat.Size = Vector3.new(2, 1, 2)
seat.Position = body.Position + Vector3.new(0, 1, 0)
seat.BrickColor = BrickColor.new("Bright blue")
seat.Name = "HeliSeat"
seat.Anchored = false

-- Привязка сиденья к телу
local weld = Instance.new("WeldConstraint")
weld.Part0 = seat
weld.Part1 = body
weld.Parent = seat

-- Винт
local rotor = Instance.new("Part", heli)
rotor.Size = Vector3.new(1, 0.2, 8)
rotor.Position = body.Position + Vector3.new(0, 1.2, 0)
rotor.BrickColor = BrickColor.new("Black")
rotor.Anchored = false
rotor.Massless = true

local motor = Instance.new("Motor6D", body)
motor.Part0 = body
motor.Part1 = rotor
motor.C0 = CFrame.new(0, 0.6, 0)

-- Движение
local gyro = Instance.new("BodyGyro", body)
gyro.MaxTorque = Vector3.new(400000, 400000, 400000)
gyro.P = 3000

local velocity = Instance.new("BodyVelocity", body)
velocity.MaxForce = Vector3.new(1e5, 1e5, 1e5)
velocity.Velocity = Vector3.zero

-- Управление
task.spawn(function()
	while seat.Occupant == nil do task.wait() end

	while seat.Occupant do
		local throttle = seat.Throttle
		local steer = seat.Steer
		local cam = workspace.CurrentCamera
		local dir = (cam.CFrame.RightVector * steer + cam.CFrame.LookVector * -throttle).Unit

		velocity.Velocity = dir * 60 + Vector3.new(0, throttle * 40, 0)
		gyro.CFrame = CFrame.new(body.Position, body.Position + dir)
		rotor.CFrame = rotor.CFrame * CFrame.Angles(0, math.rad(50), 0)
		task.wait()
	end

	velocity.Velocity = Vector3.zero
end)
