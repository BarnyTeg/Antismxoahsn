local RS = game:GetService("ReplicatedStorage")

-- Слушаем всё в радиусе
for _, remote in ipairs(RS:GetDescendants()) do
    if remote:IsA("RemoteEvent") then
        remote.OnClientEvent:Connect(function(...)
            local args = {...}
            for i, v in ipairs(args) do
                if typeof(v) == "string" and string.find(v, "Bandage") then
                    print("[REMOTE -> Клиент] "..remote.Name.." | Аргументы:", unpack(args))
                end
            end
        end)
    elseif remote:IsA("RemoteFunction") then
        -- опционально
    end
end

-- Пытаемся перехватить FireServer
local mt = getrawmetatable(game)
setreadonly(mt, false)
local oldNamecall = mt.__namecall

mt.__namecall = function(self, ...)
    local method = getnamecallmethod()
    local args = {...}
    
    for i, v in ipairs(args) do
        if typeof(v) == "string" and string.find(v, "Bandage") then
            print("[REMOTE -> СЕРВЕР] "..self.Name.." | Метод: "..method.." | Аргументы:", unpack(args))
        end
    end

    return oldNamecall(self, unpack(args))
end

print("Улучшенный шпион активен — жди команду с 'Bandage'")
