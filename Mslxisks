local ReplicatedStorage = game:GetService("ReplicatedStorage")
local SpawnHelicopterEvent = ReplicatedStorage:WaitForChild("SpawnHelicopterEvent")
local player = game.Players.LocalPlayer

-- Визуальная кнопка
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HeliGUI"
screenGui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 50)
button.Position = UDim2.new(0.5, -100, 1, -60)
button.Text = "СПАВН ВЕРТОЛЁТА"
button.BackgroundColor3 = Color3.fromRGB(60, 180, 75)
button.TextColor3 = Color3.new(1,1,1)
button.Font = Enum.Font.GothamBlack
button.TextSize = 20
button.Parent = screenGui

button.MouseButton1Click:Connect(function()
    SpawnHelicopterEvent:FireServer()
end)
