local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- 1. –ü–æ–ª–Ω–æ–µ –æ—Ç–∫–ª—é—á–µ–Ω–∏–µ —É—Ä–æ–Ω–∞
local function disableAllDamage(character)
    local humanoid = character:WaitForChild("Humanoid")
    
    -- –§–∏–∫—Å –¥–ª—è –Ω–æ–≤—ã—Ö –¥–≤–∏–∂–∫–æ–≤
    if humanoid:FindFirstChild("TakeDamage") then
        for _ = 1, 10 do -- 10 —Å–ª–æ—ë–≤ –∑–∞—â–∏—Ç—ã
            humanoid.TakeDamage:Connect(function()
                return false
            end)
        end
    end
    
    -- –ë–ª–æ–∫–∏—Ä–æ–≤–∫–∞ –ª—é–±—ã—Ö –∏–∑–º–µ–Ω–µ–Ω–∏–π –∑–¥–æ—Ä–æ–≤—å—è
    humanoid:GetPropertyChangedSignal("Health"):Connect(function()
        if humanoid.Health < humanoid.MaxHealth then
            task.defer(function()
                humanoid.Health = math.huge
            end)
        end
    end)
end

-- 2. –£–Ω–∏—á—Ç–æ–∂–µ–Ω–∏–µ –≤—Å–µ—Ö —Å–∫—Ä–∏–ø—Ç–æ–≤ —É—Ä–æ–Ω–∞
local function nukeDamageScripts(character)
    for _, v in pairs(character:GetDescendants()) do
        if v:IsA("Script") and (v.Name:lower():find("damage") or v.Name:lower():find("hit")) then
            v:Destroy()
        end
    end
end

-- 3. –ó–∞—â–∏—Ç–∞ –æ—Ç "—É–¥–∞–ª–µ–Ω–∏—è" –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
local function antiCharacterDeletion(character)
    character.AncestryChanged:Connect(function(_, parent)
        if not parent then
            task.wait(0.5)
            player:LoadCharacter()
        end
    end)
end

-- –ì–ª–∞–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è
local function godMode(character)
    disableAllDamage(character)
    nukeDamageScripts(character)
    antiCharacterDeletion(character)
    
    -- –ú–∞—Ä–∫–µ—Ä –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏
    if not character:FindFirstChild("GOD_MODE") then
        Instance.new("BoolValue", character).Name = "GOD_MODE"
    end
end

-- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
player.CharacterAdded:Connect(godMode)
if player.Character then
    godMode(player.Character)
end

print("üõ°Ô∏è –ê–ö–¢–ò–í–ò–†–û–í–ê–ù–ê –ê–ë–°–û–õ–Æ–¢–ù–ê–Ø –ó–ê–©–ò–¢–ê")
